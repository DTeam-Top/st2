{
  "name": "@dteam/st2",
  "version": "0.1.0",
  "author": "dteam",
  "license": "MIT",
  "readmeFilename": "README.md",
  "engines": {
    "node": ">=16.13.0"
  },
  "description": "Format an array of data objects as a textual table",
  "main": "dist/stringTable.js",
  "types": "dist/stringTable.d.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "lint": "gts lint",
    "clean": "gts clean",
    "compile": "tsc",
    "fix": "gts fix",
    "test": "c8 ava",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^18.7.16",
    "@vercel/ncc": "^0.34.0",
    "ava": "^4.3.3",
    "c8": "^7.12.0",
    "colors": "^1.4.0",
    "gts": "^4.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!test/utils.ts"
    ],
    "timeout": "60s",
    "failFast": true
  },
  "c8": {
    "exclude": [
      "test"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html",
      "json-summary"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DTeam-Top/st2.git"
  },
  "bugs": {
    "url": "https://github.com/DTeam-Top/st2/issues"
  },
  "homepage": "https://github.com/DTeam-Top/st2/blob/main/README.md",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "tags": [
    "typescript",
    "tools",
    "cli"
  ],
  "keywords": [
    "ascii",
    "text",
    "table",
    "ansi"
  ]
}
