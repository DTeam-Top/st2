{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "newLine": "lf",
    "noUnusedLocals": false,
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "module": "UMD",
    "lib": ["es6"]
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
